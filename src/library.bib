file = {:C$\backslash$:/Users/keman/Dropbox/Documents/Papers/Stoichiometry/Bernhardt and Likens, 2002.pdf:pdf},
issn = {00129658},
journal = {Ecology},
keywords = {Denitrification,Dissolved organic carbon,Forest,Nitrification,Nitrogen,Potassium acetate,Sphaerotilus,Stream,Uptake rates},
