file = {:C$\backslash$:/Users/keman/Dropbox/Documents/Papers/Remote Sensing/Huang{\_}et{\_}al-2018-Reviews{\_}of{\_}Geophysics.pdf:pdf},
issn = {19449208},
journal = {Reviews of Geophysics},
keywords = {flood inundation,global water mapping,spatio-temporal monitoring,surface water mapping,water index},
