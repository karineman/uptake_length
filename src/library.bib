isbn = {1365-2486},
issn = {13652486},
journal = {Global Change Biology},
keywords = {Activation energy,Climate change,Ecological stoichiometry,Metabolic theory of ecology,Nitrogen,Nutrients,Phosphorus,Temperature,Threshold elemental ratio},
number = {3},
pages = {1025--1040},
