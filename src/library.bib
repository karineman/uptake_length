file = {:C$\backslash$:/Users/keman/Dropbox/Documents/Papers/Iowa/Gentryetal{\_}N Mass Balance of a Tile-Drained Ag Watershed in East- Central Illinois.pdf:pdf},
isbn = {0047-2425},
issn = {1537-2537},
journal = {Journal of Environment Quality},
number = {5},
pages = {1841},
pmid = {19643749},
title = {{Nitrogen Mass Balance of a Tile-drained Agricultural Watershed in East-Central Illinois}},
url = {https://www.agronomy.org/publications/jeq/abstracts/38/5/1841},
volume = {38},
year = {2009}
